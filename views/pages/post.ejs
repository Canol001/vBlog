<!-- Blog Details Section -->
<section class="container mx-auto px-6 py-12 max-w-3xl">
    <!-- Post Header -->
    <header class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= post.title %></h1>
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between text-gray-600 text-sm">
            <p>Category: <span class="text-teal-600">Travel</span></p>
            <p>Posted on: <time datetime="<%= post.date.toISOString() %>"><%= post.date.toLocaleDateString() %></time></p>
        </div>
    </header>

    <!-- Featured Image -->
    <img src="<%= post.image %>" alt="<%= post.title %>" class="w-full h-auto rounded-lg mb-8 object-cover">

    <!-- Post Content -->
    <article class="prose prose-lg text-gray-700">
        <p><%= post.content %></p>
    </article>

    <!-- Social Sharing and Copy Link -->
    <div class="mt-8 flex flex-wrap gap-4 items-center">
        <p class="text-gray-700 font-medium">Share this post:</p>
        <a href="https://twitter.com/intent/tweet?url=https://yourblog.com/post/<%= post._id %>&text=<%= post.title %>" target="_blank" class="text-teal-600 hover:text-teal-800">
            <i class="fab fa-twitter text-2xl"></i>
        </a>
        <a href="https://www.facebook.com/sharer/sharer.php?u=https://yourblog.com/post/<%= post._id %>" target="_blank" class="text-teal-600 hover:text-teal-800">
            <i class="fab fa-facebook text-2xl"></i>
        </a>
        <a href="https://www.linkedin.com/shareArticle?url=https://yourblog.com/post/<%= post._id %>&title=<%= post.title %>" target="_blank" class="text-teal-600 hover:text-teal-800">
            <i class="fab fa-linkedin text-2xl"></i>
        </a>
        <button id="copy-link-btn" class="text-teal-600 hover:text-teal-800 flex items-center" title="Copy Link">
            <i class="fas fa-link text-2xl"></i>
            <span id="copy-feedback" class="ml-2 text-sm hidden">Copied!</span>
        </button>
    </div>

    <!-- Back to Blog Link -->
    <div class="mt-8">
        <a href="/" class="text-teal-600 font-medium hover:underline">← Back to All Posts</a>
    </div>
</section>

<!-- Sticky Right Column (Visible on Large Screens) -->
