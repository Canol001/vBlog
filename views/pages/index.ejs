<!-- Main Content -->
<main class="md:ml-64">
    <!-- Mobile Menu Button -->
    <button class="md:hidden fixed top-4 left-4 z-30 p-2 bg-teal-700 text-white rounded-full" id="sidebar-toggle">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
    </button>

    <!-- Featured Post Section -->
    <section class="bg-teal-700 text-white py-20 px-6">
        <div class="container mx-auto max-w-4xl">
            <h2 class="text-4xl md:text-5xl font-bold mb-4">Featured Story</h2>
            <p class="text-xl mb-6">A Journey Through the Mountains</p>
            <p class="text-gray-200 mb-8 max-w-2xl">Discover the beauty of nature and the lessons it taught me on this unforgettable hike.</p>
            <a href="#" class="inline-block bg-white text-teal-700 px-6 py-3 rounded-full font-medium hover:bg-gray-100">Read Now</a>
        </div>
    </section>

    
    <!-- Recent Posts Section -->
<section class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <h3 class="text-2xl font-bold mb-8">Recent Posts</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% posts.forEach(post => { %>
        <div class="bg-white rounded-lg shadow-sm p-6 flex flex-col md:flex-row items-start space-y-4 md:space-y-0 md:space-x-4 hover:shadow-md transition">
            <img src="<%= post.image %>" alt="Post Image" class="w-full md:w-32 h-32 object-cover rounded">
            <div>
                <h4 class="text-lg font-semibold"><%= post.title %></h4>
                <p class="text-gray-600 text-sm"><%= post.content.substring(0, 100) %>...</p> <!-- Showing first 100 characters -->
                <a href="/post/<%= post._id %>" class="text-teal-600 text-sm font-medium hover:underline">Read More</a> <!-- Link to details -->
            </div>
        </div>
        <% }) %>
    </div>
</section>

  
    
</main>